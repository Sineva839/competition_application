<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#cdbea7"
    android:orientation="vertical"
    tools:context=".MainActivity">


    <ImageView
        android:id="@+id/zmei"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:src="@drawable/koronka_pit" />

    <TextView
        android:id="@+id/textView3"
        android:textSize="28dp"
        android:layout_marginTop="50dp"
        android:textAlignment="center"
        android:textColor="#323030"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:alpha="1"
        android:text="---------------Логин---------------" />

    <EditText
        android:id="@+id/login"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="20dp"
        android:layout_marginHorizontal="20dp"
        android:text=""
        android:textColor="#323030"
        android:textSize="23dp"
        android:ems="10"
        android:hint="Введите логин"
        android:textColorHint="#323030"
        android:inputType="text" />

    <TextView
        android:id="@+id/textView2"
        android:textSize="28dp"
        android:textAlignment="center"
        android:textColor="#323030"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:alpha="1"
        android:text="---------------Парроль---------------"  />

    <EditText
        android:id="@+id/pass"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="20dp"
        android:layout_marginHorizontal="20dp"
        android:text=""
        android:textColor="#323030"
        android:textSize="23dp"
        android:ems="10"
        android:hint="Введите парроль"
        android:textColorHint="#323030"
        android:inputType="numberPassword" />

    <Button
        android:id="@+id/reg_button"
        android:backgroundTint="#323030"
        android:layout_marginTop="20dp"
        android:layout_marginHorizontal="40dp"
        android:textSize="27dp"
        android:textColor="#cdbea7"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Войти в приложение" />
</LinearLayout>